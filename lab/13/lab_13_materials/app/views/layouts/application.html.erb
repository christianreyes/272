<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "BandBlitz :: #{controller.controller_name.capitalize}" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
			<div id="login">
				<% if logged_in? %>
					<%= link_to 'Logout', logout_path %>
					<br>[<%= current_user.username %>:<%= current_user.role %>]
				<% else %>
					<%= link_to 'Login', login_path %>
				<% end %>
			</div>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%# content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
  </body>
</html>
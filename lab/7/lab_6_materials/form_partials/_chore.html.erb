<% semantic_form_for(@chore) do |f| %>
  <%= f.error_messages %>

  <% f.inputs do %>  
	<%= f.input :child, :required => true  %> 
    <%# f.input :child, :as => :radio %> 
	<%# f.input :child, :as => :check_boxes %>
	
	<%= f.input :task, :required => true %>  
	
    <%= f.input :due_on, :order => [:month, :day, :year], :start_year => 2009 %>  

	<!--// rather than a simple checkbox, I want to make a radio button with options specified //-->
    <%= f.input :completed, :as => :radio, :label => "Status", :collection => [["Pending", false], ["Completed", true]] %>  
  <% end %>

  <%= f.buttons %>

<% end %>
<html>
	<head>
		<meta http-equiv="Content-type" content="text/html; charset=utf-8">
		<title>ChoreTracker :: <%= controller.controller_name.capitalize %></title>
		<link rel="shortcut icon" href="/gc_favicon.ico" type="image/x-icon" />
		<%= stylesheet_link_tag 'text', 'layout', 'datagrid' %>
		<%= javascript_include_tag :defaults %>
		<%= csrf_meta_tag %>
	</head>

	<body>
		<div id="wrap">
    	<div id="header">
				<%= link_to(image_tag('qu_vu.jpg'), chores_path) %>
			</div>
			<br />
       <div id="nav">
       	<ul>
          <!-- OPTIONS FOR EVERYONE -->
        	<li><%= link_to 'Children', children_path %></li>
					<li><%= link_to 'Chores', chores_path %></li>
					<li><%= link_to 'Tasks', tasks_path %></li>
					<% if logged_in? %>
					<li><%= link_to 'Logout', logout_path %></li>
					<% else %>
					<li><%= link_to 'Login', login_path %></li>
					<% end %>
				</ul>
      </div> <!-- end of nav div -->
			<div style="clear:both;"></div>
	    	<div id="body">
				<p style="color: green" id="notice"><%= flash[:notice] %></p>
				<%= yield %>
			</div> <!-- end of body div -->

		</div><!-- end of wrap div -->
	</body>
</html>


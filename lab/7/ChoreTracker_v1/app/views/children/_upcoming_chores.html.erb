<table class="datagrid">
  <thead class="datagrid">
    <th width="150" align="center">Chore</th>
	<th width="150" align="center">Due On</th>
  </thead>
  
<% for chore in @upcoming_chores %>
  <tr class="<%= cycle('dg_list_line_odd', 'dg_list_line_even') %>">
    <td align="center"><%= link_to(h(chore.task.name), chore_path(chore)) %></td>
	<td align="center"><%=h chore.due_on.strftime("%m/%d") %></td>
  </tr>
<% end %>
</table>
<p class="supertiny"></p>
<span class="smtext">
<%= will_paginate @upcoming_chores, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
</span>
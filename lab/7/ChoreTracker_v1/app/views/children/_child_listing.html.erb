<table class="datagrid">
  <thead class="datagrid">
    <th width="160">Child</th>
    <th width="160" align="center">Active</th>
	<th width="90">&nbsp;</th>
  </thead>
  
<% for child in @children %>
  <tr class="<%= cycle('dg_list_line_odd', 'dg_list_line_even') %>">
    <td align="left">&nbsp;<%= link_to(h(child.name), child_path(child)) %></td>
    <td align="center"><%=h child.active %></td>
    <td align="center">
		<%= link_to(image_tag("icons/edit_dg.gif", :border => 0), edit_child_path(child))  %>&nbsp;
    	<%= link_to(image_tag("icons/close.gif", :border => 0), child_path(child), :confirm => 'You wish to delete this child?', :method => :delete) %>
	</td>
  </tr>
<% end %>
</table>
<p class="supertiny"></p>